<%- include("../partials/header-nonav") %> 
<%- include("../partials/navTitle") %>

<% if (info && info != '') {%>
  <h4 class="alert alert-info"><%=info%></h4>
  <% } %> <% if (error && error != '') {%>
  <h4 class="alert alert-danger"><%=error%></h4>
  <% } %> <% if (success && success != '') {%>
  <h4 class="alert alert-success"><%=success%></h4>
  <% } %>
  
<div class="container d-flex justify-content-center align-content-center mt-4 form-container">
  <div>
    <form action="/login" method="POST">
      <input
        type="hidden"
        ,
        name="_csrf"
        value="<%=csrfToken%>"
        class="form-item"
      />
      <div class="form-group">
        <label for="">Email</label>
        <input
          type="email"
          name="email"
          required="true"
          value="<%=email%>"
          class="form-control narrow-form"
        />
      </div>
      <div class="form-group">
        <label for="">Password</label>
        <input
          type="password"
          name="password"
          required="true"
          class="form-control narrow-form"
        />
      </div>
      <button class="btn btn-info my-3">Log in</button>
    </form>

    <div class="my-2">
      Forgot password? <a href="/passwordrecovery">Recover it here</a>
    </div>
    <!-- fix the href -->
    <div class="my-2">
      Don't have an account? <a href="/register">Sign up here</a>
    </div>
    <div class="my-2">Or go to the <a href="/animations">Main page</a></div>
  </div>
</div>
<%- include("../partials/footer") %>
